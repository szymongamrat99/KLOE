  "version": "0.2.0",
  "configurations": [
    {
      "name": "KLSPM00 Debug (GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/KLSPM00",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "LD_LIBRARY_PATH",
          "value": "/data/4/users/gamrat/root_dirs/install_root/lib:/usr/lib/x86_64-linux-gnu:$LD_LIBRARY_PATH"
        },
        {
          "name": "ROOT_INCLUDE_PATH",
          "value": "/data/4/users/gamrat/root_dirs/install_root/include"
        },
        {
          "name": "BOOST_INCLUDE_PATH",
          "value": "/usr/include"
        },
        {
          "name": "ASAN_OPTIONS",
          "value": "abort_on_error=1:detect_leaks=1"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set gdb to break on caught exceptions",
          "text": "catch throw",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build-debug"
    },
    {
      "name": "KLSPM00 Debug (GDB - ROOT pretty-print)",
