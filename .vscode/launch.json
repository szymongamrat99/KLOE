    {
      "name": "KLSPM00 Debug with AddressSanitizer",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/KLSPM00",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "LD_LIBRARY_PATH",
          "value": "/data/4/users/gamrat/root_dirs/install_root/lib:/usr/lib/x86_64-linux-gnu:$LD_LIBRARY_PATH"
        },
        {
          "name": "ASAN_OPTIONS",
          "value": "abort_on_error=1:detect_leaks=1:verbosity=2"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Break on sanitizer errors",
          "text": "break __asan::ReportGenericError",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build-debug"
    },
